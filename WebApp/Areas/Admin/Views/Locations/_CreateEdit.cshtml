@using App.Domain.Enums
@model WebApp.Areas.Admin.ViewModels.LocationCreateEditViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Location.Type" class="control-label">@App.Resources.Domain.RLocation.Type</label>
    <select asp-for="Location.Type" class="form-control" asp-items="@Html.GetEnumSelectList<ELocationType>()"></select>
    <span asp-validation-for="Location.Type" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Location.Longitude" class="control-label">@App.Resources.Domain.RLocation.Longitude</label>
    <input asp-for="Location.Longitude" class="form-control" />
    <span asp-validation-for="Location.Longitude" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Location.Latitude" class="control-label">@App.Resources.Domain.RLocation.Latitude</label>
    <input asp-for="Location.Latitude" class="form-control" />
    <span asp-validation-for="Location.Latitude" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Location.Time" class="control-label">@App.Resources.Domain.RLocation.Time</label>
    <input asp-for="Location.Time" class="form-control" />
    <span asp-validation-for="Location.Time" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Location.RouteId" class="control-label">@App.Resources.Domain.RRoute.Route</label>
    <select asp-for="Location.RouteId" class ="form-control" asp-items="Model.RouteSelectList"></select>
</div>