@model IEnumerable<App.DAL.DTO.Match>

@{
    ViewData["Title"] = "Index";
}

<h1>@Base.Resources.Domain._Shared.Index</h1>

<p>
    <a asp-action="Create">@Base.Resources.Domain._Shared.CreateNew</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MatchPercent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeltaTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeltaDist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Route1Accepted)1
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Route2Accepted)2
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Route1)1
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Route2)2
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MatchPercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeltaTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeltaDist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Route1Accepted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Route2Accepted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Route1!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Route2!.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Base.Resources.Domain._Shared.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Base.Resources.Domain._Shared.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Base.Resources.Domain._Shared.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
