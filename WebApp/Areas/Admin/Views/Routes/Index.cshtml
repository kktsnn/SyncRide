@model IEnumerable<App.DAL.DTO.Route>

@{
    ViewData["Title"] = "Index";
}

<h1>@Base.Resources.Domain._Shared.Index</h1>

<p>
    <a asp-action="Create">@Base.Resources.Domain._Shared.CreateNew</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Channel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser!.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Channel!.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Base.Resources.Domain._Shared.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Base.Resources.Domain._Shared.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Base.Resources.Domain._Shared.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
