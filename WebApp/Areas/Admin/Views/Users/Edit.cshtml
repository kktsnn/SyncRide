@using App.Domain.Enums
@model WebApp.Areas.Admin.ViewModels.UsersCreateEditIndexViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@Base.Resources.Domain._Shared.Edit</h1>

<h4>@Base.Resources.Domain.Identity.RAppUser.AppUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            
            <partial name="_CreateEdit" model="Model"/>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <hr/>
        <form asp-action="Role">
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="Role" class="control-label">@Base.Resources.Domain.Identity.RAppUser.Role</label>
                <select asp-for="Role" class="form-control" asp-items="@Html.GetEnumSelectList<EAppRole>()">
                    <option value="">Choose role...</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" name="IconButton" value="add" class="btn btn-outline-success">@Base.Resources.Domain.Identity.RAppUser.AddRole</button>
                <button type="submit" name="IconButton" value="remove" class="btn btn-outline-danger">@Base.Resources.Domain.Identity.RAppUser.RemoveRole</button>
            </div>
        </form>
        <hr/>
        <form asp-action="Icon" method="post">
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <button type="submit" value="delete" class="btn btn-outline-danger">@Base.Resources.Domain.Identity.RAppUser.DeleteProfPic</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Base.Resources.Domain._Shared.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
