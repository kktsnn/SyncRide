@page
@model WebApp.Areas.Identity.Pages.Account.IndexModel
@{
    ViewData["Title"] = "Profile";
}
<h1>@ViewData["Title"]</h1>
<hr/>

<div>
    <div>
        <img src="@Model.UserInfo.IconPath" alt="User Profile Picture" width="100" height="100"/>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserInfo.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserInfo.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserInfo.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserInfo.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserInfo.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserInfo.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserInfo.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserInfo.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserInfo.About)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserInfo.About)
        </dd>
    </dl>
    @if (string.IsNullOrEmpty(HttpContext.Request.Query["id"]))
    {
        <div>
            <a class="btn btn-outline-info" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Edit Account</a>
            <a class="btn btn-outline-primary" asp-area="" asp-controller="Routes" asp-action="Index">Manage Routes</a>
        </div>
    }
    else
    {
        var channelId = HttpContext.Request.Query["channelId"];
        if (!string.IsNullOrEmpty(channelId))
        {
            <a class="btn btn-outline-primary" asp-area="" asp-controller="Channels" asp-action="Index" asp-route-id="@channelId">Back to Channel</a>
        }
        else
        {
            <a class="btn btn-outline-primary" asp-area="" asp-controller="Matches" asp-action="Index">Back to matches</a>
        }
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}