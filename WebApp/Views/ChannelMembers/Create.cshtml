@model ChannelMemberCreateEditViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add</h1>

<h4>@App.Resources.Domain.RChannelMember.ChannelMember</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            
            <div class="form-group">
                <label asp-for="AppUserId" class="control-label">@Base.Resources.Domain.Identity.RAppUser.AppUser</label>
                <select asp-for="AppUserId" class ="form-control" asp-items="Model.MemberSelectList"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Channels" asp-action="Index" asp-route-id="@Context.Request.RouteValues["channelId"]">Back to channel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
