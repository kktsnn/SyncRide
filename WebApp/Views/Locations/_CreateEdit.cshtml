@using App.Domain.Enums
@model App.BLL.DTO.Location

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Type" class="control-label">@App.Resources.Domain.RLocation.Type</label>
    <select asp-for="Type" class="form-control" asp-items="@Html.GetEnumSelectList<ELocationType>()"></select>
    <span asp-validation-for="Type" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Longitude" class="control-label">@App.Resources.Domain.RLocation.Longitude</label>
    <input asp-for="Longitude" class="form-control" />
    <span asp-validation-for="Longitude" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Latitude" class="control-label">@App.Resources.Domain.RLocation.Latitude</label>
    <input asp-for="Latitude" class="form-control" />
    <span asp-validation-for="Latitude" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Time" class="control-label">@App.Resources.Domain.RLocation.Time</label>
    <input asp-for="Time" class="form-control" />
    <span asp-validation-for="Time" class="text-danger"></span>
</div>